extends ../includes/layouts/app-layoutblock content  .row    .col-lg      .card        .card-body.pt-3          ul.nav.nav-tabs.nav-tabs-bordered            li.nav-item              button.nav-link.active(data-bs-toggle='tab' data-bs-target='#myBalance')=wallets[0].name            li.nav-item              button.nav-link(data-bs-toggle='tab' data-bs-target='#etherum')=wallets[1].name            li.nav-item              button.nav-link(data-bs-toggle='tab' data-bs-target='#shibaInu')=wallets[2].name            li.nav-item              button.nav-link(data-bs-toggle='tab' data-bs-target='#safeMoon')=wallets[3].name          .tab-content.pt-2            #myBalance.tab-pane.fade.show.active              .row.p-5                .col-lg-12.d-flex.justify-content-start.align-items-center                  img(src='img/wallet-icons/usd.png')                  h2.p-2=wallets[0].name                    span.text-muted &nbsp;(#{wallets[0].symbol})              .row.p-5                .col-lg-6                  .price=wallets[0].values.at(-1).toFixed(2) + ' $'                .col-lg-6.d-flex.justify-content-around.flex-column.align-items-center                    if !card.name                      a(href='/profile').d-inline-block.small                        | Please add a credit card before adding or withdrawing funds.                    else                      button(type='button' data-bs-toggle='modal' data-bs-target='#addFundsModal').btn.btn-warning.text-black.p-3.w-75                        | Add funds                      #addFundsModal.modal.fade(tabindex='-1' style='display: none;' aria-hidden='true')                        .modal-dialog.modal-dialog-centered                          .modal-content                            form(action='/wallets/my-balance/add-funds' method='POST')                              .modal-header                                | Add funds                              .modal-body                                .row.mb-3                                  label.col-md-6.col-lg-5.col-form-label Amount (USD)                                  .col-md-6.col-lg-5                                    input.form-control(name='amount' type='text')                              .modal-footer                                button(type='button' data-bs-dismiss='modal').btn.btn-warning Cancel                                button(type='sumbit').btn.btn-warning Confirm                      button(disabled=!wallets[0].values.at(-1) data-bs-toggle='modal' data-bs-target='#withdrawModal').btn.btn-warning.text-black.p-3.w-75                        | Withdraw                      #withdrawModal.modal.fade(tabindex='-1' style='display: none;' aria-hidden='true')                        .modal-dialog.modal-dialog-centered                          .modal-content                            form(action='/wallets/my-balance/withdraw' method='POST')                              .modal-header                                | Withdraw                              .modal-body                                .row.mb-3                                  label.col-md-6.col-lg-5.col-form-label Amount (USD)                                  .col-md-6.col-lg-5                                    input.form-control(name='amount' type='text')                              .modal-footer                                button(type='button' data-bs-dismiss='modal').btn.btn-warning Cancel                                button(type='sumbit').btn.btn-warning Confirm            #etherum.tab-pane.fade.show              .row.p-5                .col-lg-12.d-flex.justify-content-start.align-items-center                  img(src='img/wallet-icons/etherum.png')                  h2.p-2 Ethereum                    span.text-muted &nbsp;(#{wallets[1].symbol})                  h3#ethMarketValue.text-muted              .row.p-5                .col-lg-6                  .price=wallets[1].values.at(-1)                .col-lg-6.d-flex.justify-content-around.flex-column                  button(disabled=wallets[0].values.at(-1) <= 0 data-bs-toggle='modal' data-bs-target='#buyEthModal').btn.btn-warning.text-black.p-3.w-75                    | Buy                  button(disabled=wallets[1].values.at(-1) <= 0).btn.btn-warning.text-black.p-3.w-75                    | Sell                  #buyEthModal.modal.fade(tabindex='-1' style='display: none;' aria-hidden='true')                    .modal-dialog.modal-dialog-centered                      .modal-content                        form(action='/wallets/eth/buy' method='POST')                          .modal-header                            | Buy Ethereum                          .modal-body                            .row.mb-3                              label.col-md-6.col-lg-5.col-form-label Amount (USD)                              .col-md-6.col-lg-5                                input#buyEthInputUSD.form-control(name='amount' type='text')                            .row.mb-3                              label.col-md-6.col-lg-5.col-form-label Amount (ETH)                              .col-md-6.col-lg-5                                input#buyEthInputETH.form-control(readonly=true type='text')                          .modal-footer                            button(type='button' data-bs-dismiss='modal').btn.btn-warning Cancel                            button(type='sumbit').btn.btn-warning Confirm            #shibaInu.tab-pane.fade.show              .row.p-5                .col-lg-12.d-flex.justify-content-start.align-items-center                  img(src='img/wallet-icons/shib.png')                  h2.p-2 Shiba Inu                    span.text-muted &nbsp;(#{wallets[2].symbol})                  h3#shibMarketValue.text-muted              .row.p-5                .col-lg-6                  .price=wallets[2].values.at(-1)                .col-lg-6.d-flex.justify-content-around.flex-column                  button(disabled=wallets[0].values.at(-1) <= 0).btn.btn-warning.text-black.p-3.w-75                    | Buy                  button(disabled=wallets[2].values.at(-1) <= 0).btn.btn-warning.text-black.p-3.w-75                    | Sell            #safeMoon.tab-pane.fade.show              .row.p-5                .col-lg-12.d-flex.justify-content-start.align-items-center                  img(src='img/wallet-icons/safemoon.png')                  h2.p-2 SafeMoon                    span.text-muted &nbsp;(#{wallets[3].symbol})                  h3#safemoonMarketValue.text-muted              .row.p-5                .col-lg-6                  .price=wallets[3].values.at(-1)                .col-lg-6.d-flex.justify-content-around.flex-column                  button(disabled=wallets[0].values.at(-1) <= 0).btn.btn-warning.text-black.p-3.w-75                    | Buy                  button(disabled=wallets[3].values.at(-1) <= 0).btn.btn-warning.text-black.p-3.w-75                    | Sellblock scripts  script(src='/js/wallets.js')